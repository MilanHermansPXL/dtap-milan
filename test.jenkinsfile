pipeline {
    agent any

    tools {
        nodejs 'testenvnode'
    }

    environment {
        DOCKER_IMAGE = 'devops-pe/calculator-app'  // Vervang door de naam van je repository
        DOCKER_TAG = 'latest'  // Gebruik 'latest' of een specifieke tag zoals de buildnummer
    }

    stages {
        stage('cleanup') {
            steps {
                deleteDir()  // Verwijder oude bestanden
            }
        }

        stage('Install dependencies') {
            steps {
                sh 'npm install express'  // Installeer de benodigde Node.js dependencies
            }
        }

        stage('fetch app code') {
            steps {
                // Haal de code uit je GitHub-repository
                git branch: 'main', url: 'https://github.com/PXL-2TIN-DevOps-Resources/calculator-app-finished.git'
            }
        }

        stage('Build artifact') {
            steps {
                // Bouw de Docker-container
                sh 'docker build -t $DOCKER_IMAGE:$DOCKER_TAG .' 
            }
        }

        stage('Push artifact') {
            steps {
                script {
                    // Log in op Docker Hub met de opgeslagen Jenkins-credentials
                    docker.withRegistry('https://index.docker.io/v1/', 'dockerhub-credentials') {
                        // Push de Docker-image naar Docker Hub
                        sh 'docker push $DOCKER_IMAGE:$DOCKER_TAG'
                    }
                }
            }
        }
    }

    post {
        always {
            // Verwijder alle Docker-containers na de build
            sh 'docker rm -f $(docker ps -a -q)'
        }
    }
}
