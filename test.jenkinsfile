pipeline {
    agent any
    tools {
        nodejs 'testenvnode'  // Specify your Node.js environment
    }
    stages {
        stage('Cleanup') {
            steps {
                deleteDir()
            }
        }
        stage('Install dependencies') {
            steps {
                sh "npm install express"
            }
        }
        stage('Fetch app code') {
            steps {
                git branch: 'main', url: 'https://github.com/PXL-2TIN-DevOps-Resources/calculator-app-finished.git'
            }
        }
        stage('Build artifact') {
            steps {
                sh 'docker build -t devops-pe/calculator-app:latest .'
            }
        }
        stage('Push Artifact to DockerHub') {
            steps {
                script {
                    withCredentials([usernamePassword(credentialsId: 'dockerhub', passwordVariable: 'DOCKERHUB_PSW', usernameVariable: 'DOCKERHUB_USR')]) {
                        // Login to DockerHub and push the image
                        sh '''
                            docker logout
                            echo $DOCKERHUB_PSW | docker login -u $DOCKERHUB_USR --password-stdin
                            docker push devops-pe/calculator-app:latest
                        '''
                    }
                }
            }
        }
    }
    post {
        always {
            sh 'docker logout'  // Logout from DockerHub after the pipeline execution
        }
    }
}
