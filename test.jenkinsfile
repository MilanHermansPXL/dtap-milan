pipeline {
    agent any
    tools {
        nodejs 'testenvnode'
    }
    environment {
        DOCKERHUB_CREDENTIALS = credentials('dockerhub')  // Haal de credentials op
    }
    stages {
        stage('cleanup') {
            steps {
                deleteDir()
            }
        }
        stage('Install dependencies') {
            steps {
                sh "npm install express"
            }
        }
        stage('fetch app code') {
            steps {
                git branch: 'main', url: 'https://github.com/PXL-2TIN-DevOps-Resources/calculator-app-finished.git'
            }
        }
        stage('Build artifact') {
            steps {
                sh 'docker build -t devops-pe/calculator-app:latest .'
            }
        }
        stage('Push Artifact') {
            steps {
                script {
                    // Gebruik 'withCredentials' om de Docker Hub inloggegevens veilig te verwerken
                    withCredentials([usernamePassword(credentialsId: 'dockerhub', passwordVariable: 'DOCKERHUB_PSW', usernameVariable: 'DOCKERHUB_USR')]) {
                        sh 'echo $DOCKERHUB_PSW | docker login -u $DOCKERHUB_USR --password-stdin'
                        sh 'docker push devops-pe/calculator-app:latest'
                    }
                }
            }
        }
    }
    post {
        always {
            sh 'docker logout'
        }
    }
}
