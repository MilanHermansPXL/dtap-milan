pipeline {
    agent any
    tools {
        nodejs 'testenvnode'
    }
    stages {
        stage('cleanup') {
            steps {
                deleteDir()
            }
        }
        stage('Install dependencies') {
            steps {
                sh "npm install express"
            }
        }
        stage('fetch app code') {
            steps {
                git branch: 'main', url: 'https://github.com/PXL-2TIN-DevOps-Resources/calculator-app-finished.git'
            }
        }
        stage('Build artifact') {
            steps {
                sh 'docker build -t devops-pe/calculator-app:latest .'
            }
        }
        stage('Push artifact') {
            steps {
                script {
                    // Login naar Docker Hub met de 'docker' credentials die je hebt opgeslagen in Jenkins
                    docker.withRegistry('https://index.docker.io/v1/', 'docker') {
                        sh 'docker push devops-pe/calculator-app:latest'
                    }
                }
            }
        }
    }
}
