pipeline {
    agent any
    tools {
        nodejs 'testenvnode'  // Specify your Node.js environment
    }
    environment {
        DOCKERHUB_CREDENTIALS = credentials('dockerhub')  // Retrieve DockerHub credentials from Jenkins credentials store
    }
    stages {
        stage('cleanup') {
            steps {
                deleteDir()  // Remove any existing temporary files
            }
        }
        stage('Install dependencies') {
            steps {
                sh "npm install express"  // Install the express dependency
            }
        }
        stage('fetch app code') {
            steps {
                git branch: 'main', url: 'https://github.com/PXL-2TIN-DevOps-Resources/calculator-app-finished.git'  // Clone the repository
            }
        }
        stage('Build artifact') {
            steps {
                sh 'docker build -t devops-pe/calculator-app:latest .'  // Build the Docker image with the correct tag
            }
        }
        stage('Login to DockerHub') {
            steps {
                script {
                    // Use 'withCredentials' to handle Docker Hub login credentials securely
                    withCredentials([usernamePassword(credentialsId: 'dockerhub', passwordVariable: 'DOCKERHUB_PSW', usernameVariable: 'DOCKERHUB_USR')]) {
                        // Docker login with credentials
                        sh 'echo $DOCKERHUB_PSW | docker login -u $DOCKERHUB_USR --password-stdin'
                    }
                }
            }
        }
        stage('Push Artifact to DockerHub') {
            steps {
                // Push the image to the correct Docker Hub repository using the correct tag
                sh 'docker push devops-pe/calculator-app:latest'
            }
        }
    }
    post {
        always {
            sh 'docker logout'  // Logout from DockerHub after the pipeline execution
        }
    }
}
